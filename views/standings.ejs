<body>
    <section id="header">
        <div class="n-bar container col-sm-8 col-10 text-center rounded-4 mb-5">
            <div class="row align-items-center py-3">
                <a class="n-btns nav-link col" href="/live">Live</a>
                <a class="n-btns nav-link col" href="/schedule">Schedule</a>
                <a href="/" class="col-sm col my-4">
                <img class="mm-logo" src="images/mm-white-logo.png" alt="Site Logo">
                </a>
                <a class="n-btns nav-link col" href="/results">Results</a>
                <a class="n-btns nav-link col" href="/standings">Standings</a>
            </div>
        </div>

    </section>

    <section id="league">
        <div class="league-form container col-md-8 col-sm-12 col-12 text-center my-5">
          <div class="row gap-4">
              <a class="selector btn col rounded-4" href="#tablePL"><img class="league-logo" src="https://crests.football-data.org/PL.png" alt="PL Logo"></a>
              <a class="selector btn col rounded-4" href="#tableBL"><img id="bl-logo" class="league-logo" src="https://www.bundesliga.com/assets/logo/bundesliga_neg.svg" alt="BL Logo"></a>
              <a class="selector btn col rounded-4" href="#tableSA"><img id="sa-logo" class="league-logo mt-4" src="https://www.fifplay.com/img/public/serie-a-logo-transparent.png" alt="SA Logo"></a>
          </div>
        </div>
      </section>

    <section id="tablePL">
        <div class="title container col-sm-8 col-10 text-center rounded-4 mt-3">
            <h2><%= infoPL.competition.name %> Standings</h2>
        </div>
        <div class="container col-md-8 col-sm-12 col-12 text-center my-5">
            <table class="st-table table-custom">
                <thead>
                    <tr>
                        <td>Position</td>
                        <td>Team</td>
                        <td>Games</td>
                        <td>Wins</td>
                        <td>Draws</td>
                        <td>Loses</td>
                        <td>GoalDiff</td>
                        <td>Points</td>
                    </tr>
                </thead>
                <tbody>
                    <% infoPL.standings[0].table.forEach(team => { %>
                        <tr class="table-active">
                            <td><%= team.position %></td>
                            <td><img class="mini-logo" src="<%= team.team.crest %>" alt="team-logo"> <%= team.team.name %></td>
                            <td><%= team.playedGames %></td>
                            <td><%= team.won %></td>
                            <td><%= team.draw %></td>
                            <td><%= team.lost %></td>
                            <td><%= team.goalDifference %></td>
                            <td><%= team.points %></td>
                        </tr>
                    <% }) %>
                </tbody>

            </table>
        </div>

    </section>
